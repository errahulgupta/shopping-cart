<% include ../partials/header %>

<div class="container">
<% products.forEach(function(product){ %>
    <div class="row">
        <% product.forEach(function(thing){ %>
            <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="<%= thing.image %>" alt="..." class="img-responsive">
                <div class="caption">
                    <h3><%= thing.title %></h3>
                    <p class="description"><%= thing.description %></p>
                    <div class="clearfix">
                        <div class="price pull-left">$<%= thing.price %></div>
                        <a href="/add-to-cart/<%= thing._id %>" class="btn btn-success pull-right" role="button">Add to Shopping Cart</a>
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
<% }) %>
</div>
</div>


<% include ../partials/footer %>